<LoadingScreen>:
    name:"LoadingScreen"
    on_pre_enter:app.verificador_tema_label(titulo)


    BoxLayout:
        orientation: 'vertical'
        md_bg_color:.9,.9,0,1

        MDFloatLayout:

            MDLabel:
                id:titulo
                text:"MAGNA"
                font_name:"fonts/static/Montserrat-Light.ttf"
                theme_text_color:"Custom"
                markup:True
                text_color:1,1,1,1

                pos_hint:{"center_x":.90,"center_y":0.5}
                font_size:70

            MDSpinner:
                size_hint: None, None
                size: dp(350), dp(350)
                active: True
                pos_hint:{"center_x":0.5,"center_y":0.5}



