<AdminScreen>
    name:"AdminScreen"
    on_pre_enter:app.list_of_funcionarios(lista_funcionarios)
    MDBoxLayout:
        md_bg_color:.1,.1,.1,0


        orientation: "vertical"

        MDTopAppBar:
            elevation:0
            left_action_items: [["arrow-left", lambda x: app.change_screen_left(root.manager,"LoginScreen")]]


        MDBoxLayout:
            orientation:"horizontal"
            md_bg_color:.2,.2,.2,0
            MDFloatLayout:


                MDBoxLayout:
                    orientation:"vertical"
                    md_bg_color:.2,.2,.2,0
                    padding:30

                    MDScrollView:
                        on_parent: self.scroll_wheel_distance = 120
                        MDList:

                            OneLineListItem:
                                height:500

                                ripple_color: .2, .2, .2, 1

                                MDBoxLayout:
                                    orientation:"vertical"
                                    padding:10
                                    pos_hint:{"center_x":.5,"center_y":.5}
                                    MDBoxLayout:
                                        id:lista_funcionarios
                                        pos_hint:{"center_x":.5,"center_y":.5}





                            OneLineListItem:
                                ripple_color: .2, .2, .2, 1
                                height:700
                                MDLabel:
                                    padding:30
                                    text:"Cadastro de Funcionaroios"
                                    font_name:"fonts/static/Montserrat-Bold.ttf"
                                    pos_hint:{"center_y":.95,"center_x":.84}
                                    font_size:20
                                MDTextField:
                                    id:Nome
                                    hint_text:"Nome"
                                    helper_text: "Digite o Nome Completo"
                                    helper_text_mode: "on_focus"
                                    size_hint_x:.8
                                    pos_hint:{"center_y":.75,"center_x":.5}
                                    mode:"fill"
                                    required:True
                                MDTextField:
                                    id:Senha
                                    hint_text:"Senha"
                                    helper_text:"Digite a Senha"
                                    helper_text_mode:"on_focus"
                                    pos_hint:{"center_y":.5,"center_x":.225}
                                    size_hint_x:.25
                                    mode:"fill"
                                    required:True
                                MDTextField:
                                    id:Telefone
                                    hint_text:"Telefone"
                                    helper_text:"999 999 999"
                                    helper_text_mode:"on_focus"
                                    pos_hint:{"center_y":.5,"center_x":.5}
                                    size_hint_x:.25
                                    max_text_length: 11
                                    mode:"fill"
                                    required:True
                                MDTextField:
                                    id:N_id
                                    hint_text:"Nº Id"
                                    helper_text:"12345"
                                    helper_text_mode:"on_focus"
                                    pos_hint:{"center_y":.5,"center_x":.775}
                                    max_text_length: 5

                                    size_hint_x:.25
                                    mode:"fill"
                                    required:True
                                MDFillRoundFlatButton:
                                    text:"Cadastrar"
                                    md_bg_color:app.theme_cls.primary_color
                                    pos_hint:{"center_y":.1,"center_x":.39}
                                    size_hint_y:.12
                                    size_hint_x:.2
                                    font_size:25
                                    font_name:"fonts/static/Montserrat-Medium.ttf"
                                    on_release:app.send_funcionrios(Nome.text,Senha.text,Telefone.text,N_id.text)
                                MDFillRoundFlatButton:
                                    text:"Limpar"
                                    md_bg_color:app.theme_cls.primary_color
                                    pos_hint:{"center_y":.1,"center_x":.61}
                                    size_hint_y:.12
                                    size_hint_x:.2
                                    font_size:25
                                    font_name:"fonts/static/Montserrat-Medium.ttf"
                                    on_release:app.clean_textfield_adm(Nome,Senha,Telefone,N_id)
                                MDFillRoundFlatButton:
                                    id:opcoes
                                    text:"Opções"
                                    md_bg_color:1,1,1,0
                                    pos_hint:{"center_y":.1,"center_x":.25}
                                    font_size:20
                                    font_name:"fonts/static/Montserrat-Medium.ttf"
                                    on_release:app.open_menu_adm(opcoes,text_funcao)



                                MDLabel:
                                    id:text_funcao
                                    text:"Criar Cadastro"
                                    color:app.theme_cls.primary_color
                                    pos_hint:{"center_y":.3,"center_x":.6}
                                    font_name:"fonts/static/Montserrat-Medium.ttf"


                            OneLineListItem:
                                height:500
                                ripple_color: .2, .2, .2, 1
                                MDBoxLayout:
                                    orientation:"horizontal"
                                    MDBoxLayout:
                                        padding:50
                                        md_bg_color:.1,.1,.1,1
                                        MDIconButton:
                                            icon:"account"
                                            pos_hint:{"center_y":.5,"center_x":.7}
                                            icon_size:100
                                            on_release:app.change_screen_right(root.manager,"ChoiceScreen")

                                        MDLabel:
                                            text:"Secretaria"
                                            font_name:"fonts/static/Montserrat-Medium.ttf"
                                            pos_hint:{"center_y":.5,"center_x":.7}
                                            font_size:30

                                    MDBoxLayout:

                                        padding:50
                                        md_bg_color:.13,.13,.13,1
                                        MDIconButton:
                                            icon:"face-recognition"
                                            pos_hint:{"center_y":.5,"center_x":.7}
                                            icon_size:100
                                            on_release:app.change_screen_right(root.manager,"DoorMonitoramentScreen")
                                        MDLabel:
                                            text:"Portaria"
                                            font_name:"fonts/static/Montserrat-Medium.ttf"
                                            pos_hint:{"center_y":.5,"center_x":.7}
                                            font_size:30

                                    MDBoxLayout:
                                        padding:50
                                        md_bg_color:.16,.16,.16,1
                                        MDIconButton:
                                            icon:"monitor"
                                            pos_hint:{"center_y":.5,"center_x":.7}
                                            icon_size:100
                                            on_release:app.change_screen_right(root.manager,"SchoolMonitoramentScreen")

                                        MDLabel:
                                            text:"Monitoração"
                                            font_name:"fonts/static/Montserrat-Medium.ttf"
                                            pos_hint:{"center_y":.5,"center_x":.7}
                                            font_size:30





    MDFloatLayout:
        MDLabel:
            text:"MAGNA"
            font_name:"fonts/static/Montserrat-Light.ttf"
            font_size:50
            size_hint_y: None
            pos_hint:{"center_x":0.5,"center_y":.95}

            halign:"center"

    MDFloatLayout:

        MDIconButton:
            icon:"reload"
            on_release:app.update_row_datatable_adm()
            pos_hint:{"center_x":.91,"center_y":.94}
        MDLabel:
            text:"Atualizar Lista"
            pos_hint:{"center_x":1.3,"center_y":.94}
            font_name:"fonts/static/Montserrat-Light.ttf"











