<UsersInformationScreen>:
    name:"UsersInformationScreen"

    MDBoxLayout:
        orientation:"vertical"
        on_touch_down:app.list_of_alunos(Lista_alunos,Container_Imagem,Container_Texto)
        MDTopAppBar:
            md_bg_color:app.theme_cls.primary_color
            title:"MAGNA"
            id:"menu"
            left_action_items: [["arrow-left", lambda x: app.change_screen_left(root.manager,"ChoiceScreen")]]




        MDTextField:
            hint_text:"ID"
            helper_text:"Digite o ID do Aluno"
            helper_text_mode:"on_focus"
            icon_right: "magnify"  # Ícone de pesquisa à direita
            mode:"rectangle"

        MDBoxLayout:
            orientation:"horizontal"
            padding:20
            MDScrollView:


                id:Alunos_Container
                MDList:
                    id:Lista_alunos
                    OneLineListItem:
                        text: "Alunos"
                        divider_color:app.theme_cls.primary_color
            MDBoxLayout:
                MDFloatLayout:
                    Image:
                        id:Container_Imagem
                        source:"images/henry.jpeg"
                        pos_hint:{"center_y":.5,"center_x":.5}
                    MDLabel:
                        id:Container_Texto


    MDFloatLayout:
        MDIconButton:
            icon:"cog-outline"
            pos_hint:{"center_y":.98,"center_x":.98}
            color:1,1,1,1
            on_release:app.change_screen_right(root.manager,"ConfigMonitoramentScreen")
