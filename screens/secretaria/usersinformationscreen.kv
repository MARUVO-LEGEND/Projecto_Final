<UsersInformationScreen>:
    on_pre_enter:app.list_of_alunos(Lista_alunos)

    name:"UsersInformationScreen"
    MDBoxLayout:
        orientation:"vertical"
        MDTopAppBar:
            md_bg_color:app.theme_cls.primary_color
            title:"MAGNA"
            id:"menu"
            left_action_items: [["arrow-left", lambda x: app.change_screen_left(root.manager,"ChoiceScreen")]]




        MDTextField:
            hint_text:"ID"
            helper_text:"Digite o ID do Aluno"
            helper_text_mode:"on_focus"
            icon_right: "magnify"  # Ícone de pesquisa à direita
            mode:"rectangle"

        MDBoxLayout:
            padding:20
            MDScrollView:
                id:Alunos_Container
                MDAnchorLayout:
                    id:Lista_alunos



    MDFloatLayout:
        MDIconButton:
            icon:"cog-outline"
            pos_hint:{"center_y":.98,"center_x":.98}
            color:1,1,1,1
            on_release:app.change_screen_right(root.manager,"ConfigUsersInformationScreen")


