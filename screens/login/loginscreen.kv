
<LoginScreen>:
    name:"LoginScreen"



    MDBoxLayout:

        padding:60


        MDBoxLayout:
            md_bg_color:1,1,0,1
            radius:[20, 20, 20, 20]
            elevation:5


            MDFloatLayout:
                md_bg_color:app.theme_cls.primary_color
                radius:[20, 0, 0, 20]
                elevation:3


                MDLabel:
                    text:"MAGNA"
                    font_name:"fonts/static/Montserrat-Light.ttf"
                    font_size:100
                    pos_hint:{"center_x":0.5,"center_y":0.80}
                    halign:"center"
                MDLabel:
                    text:"Seja Bem Vindo"
                    font_name:"fonts/static/Montserrat-ExtraLight.ttf"
                    font_size:50
                    pos_hint:{"center_x":0.5,"center_y":0.55}
                    color:"white"
                    halign:"center"

                MDLabel:
                    text:"Para Saber Mais Sobre a Aplicção"
                    font_name:"fonts/static/Montserrat-Light.ttf"
                    font_size:20
                    pos_hint:{"center_x":0.5,"center_y":0.45}
                    color:"white"
                    bold:True
                    halign:"center"

                MDFillRoundFlatButton:
                    text:"Clique Aqui"
                    md_bg_color:1,1,1,0
                    line_color:1,1,1,1
                    size_hint_x:0.7
                    pos_hint:{"center_x":0.5,"center_y":0.3}
                    on_release:
                        app.change_screen_left(root.manager,"AboutAppScreen")


            MDFloatLayout:

                md_bg_color:.2,.2,.2,1
                radius:[0, 20, 20, 0]
                elevation:3


                Image:
                    source:"images/profile_icon.png"
                    size_hint:(0.4,0.4)
                    pos_hint:{"center_x":0.5,"center_y":0.8}




                MDLabel:
                    text:"Faça Login Para Continuar"
                    font_style:"H5"
                    font_name:"fonts/static/Montserrat-Medium.ttf"

                    halign:"center"
                    pos_hint:{"center_x":0.5,"center_y":0.62}

                MDTextField:
                    id:Nome
                    hint_text:"Nome"
                    pos_hint:{"center_x":0.5,"center_y":0.5}
                    size_hint_x:.8
                    icon_right:"email"

                    icon_right_color:app.theme_cls.primary_color
                    text_color:app.theme_cls.primary_color
                    icon_right_color:app.theme_cls.primary_color
                    icon_right_color_normal:app.theme_cls.primary_color
                    icon_right_color_focus:app.theme_cls.primary_color
                    helper_text_color_focus:app.theme_cls.primary_color
                    helper_text_color_normal:app.theme_cls.primary_color
                    line_color_focus:app.theme_cls.primary_color
                    line_color_normal:app.theme_cls.primary_color
                    text_color_focus:app.theme_cls.primary_color
                    text_color_normal:app.theme_cls.primary_color

                MDTextField:
                    id:Senha
                    hint_text:"Senha"

                    pos_hint:{"center_x":0.5,"center_y":0.4}
                    size_hint_x:0.8

                    password:True
                    icon_right:"lock"
                    text_color:app.theme_cls.primary_color
                    icon_right_color:app.theme_cls.primary_color
                    icon_right_color_normal:app.theme_cls.primary_color
                    icon_right_color_focus:app.theme_cls.primary_color
                    helper_text_color_focus:app.theme_cls.primary_color
                    helper_text_color_normal:app.theme_cls.primary_color
                    line_color_focus:app.theme_cls.primary_color
                    line_color_normal:app.theme_cls.primary_color
                    text_color_focus:app.theme_cls.primary_color
                    text_color_normal:app.theme_cls.primary_color

                MDFillRoundFlatButton:
                    text:"Entrar"
                    md_bg_color:app.theme_cls.primary_color
                    text_color:1,1,1,1
                    font_size:25
                    elevation:3
                    pos_hint:{"center_x":0.5,"center_y":0.3}
                    size_hint_x:0.8
                    on_release:app.on_login_button_click(root.manager,Nome,Senha)


    MDFloatLayout:
        MDIconButton:
            icon:"cog-outline"
            pos_hint:{"center_y":.97,"center_x":.98}
            color:1,1,1,1
            on_release:app.change_screen_right(root.manager,"ConfigLoginScreen")




