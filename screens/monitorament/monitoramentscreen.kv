<MonitoramentScreen>
    name:"MonitoramentScreen"

    MDBoxLayout:
        md_bg_color:.1,.1,.1,1


        orientation: "vertical"

        MDTopAppBar:
            title:"MAGNA"
            elevation:0


        MDBoxLayout:
            orientation:"horizontal"
            md_bg_color:.2,.2,.2,1
            MDFloatLayout:




                MDBoxLayout:
                    orientation:"vertical"
                    md_bg_color:.2,.2,.2,1
                    MDFloatLayout:
                        Image:
                            id: camera_image
                            source: "images/icon_camera.png"

                            pos_hint:{"center_x":.5,"center_y":.5}



                    MDFillRoundFlatButton:
                        text:"Iniciar Captura"
                        id:button_cp
                        md_bg_color:app.theme_cls.primary_color
                        pos_hint:{"center_x":.5,"center_y":.2}
                        on_touch_down:app.start_capture(camera_image,button_cp)





            MDBoxLayout:

                MDCard:
                    orientation:"vertical"
                    Image:
                        source:"images/henry.jpeg"

                    MDBoxLayout:
                        orientation:"vertical"
                        MDLabel:
                            id:nome_aluno
                            text:"Nome:henry Canvil"
                            font_size:20
                            halign:"center"
                        MDLabel:
                            id:nome_aluno
                            text:"Turma:TI11A"
                            font_size:20
                            halign:"center"
                        MDLabel:
                            id:nome_aluno
                            text:"Classe:11ª"
                            font_size:20
                            halign:"center"
                        MDLabel:
                            id:nome_aluno
                            text:"Nº:13"
                            font_size:20
                            halign:"center"
                        MDLabel:
                            id:nome_aluno
                            text:"Sala:5"
                            font_size:20
                            halign:"center"





    MDFloatLayout:
        MDIconButton:
            icon:"cog-outline"
            pos_hint:{"center_y":.97,"center_x":.96}
            color:1,1,1,1
            on_release:app.change_screen_right(root.manager,"ConfigMonitoramentScreen")













