<DoorMonitoramentScreen>
    name:"DoorMonitoramentScreen"
    MDBoxLayout:


        orientation: "vertical"

        MDTopAppBar:
            elevation:0
            left_action_items: [["arrow-left", lambda x: app.change_screen_left(root.manager,"LoginScreen")]]

        MDBoxLayout:
            orientation:"horizontal"
            MDBoxLayout:




                MDBoxLayout:
                    orientation:"vertical"
                    MDBoxLayout:
                        MDFloatLayout:
                            MDCard:
                                md_bg_color:app.theme_cls.primary_color
                                size_hint_y:.5
                                size_hint_x:.5
                                pos_hint:{"center_x":.5,"center_y":.5}
                            Image:
                                id: camera_image
                                md_bg_color:.5,.5,.5,1
                                source: "images/icon_camera.png"

                                pos_hint:{"center_x":.5,"center_y":.5}



                            MDFillRoundFlatButton:
                                text:"Iniciar Captura"
                                id:button_cp
                                md_bg_color:app.theme_cls.primary_color
                                font_name:"fonts/static/Montserrat-Medium.ttf"
                                pos_hint:{"center_x":.5,"center_y":.1}
                                on_release:app.start_capture(camera_image,button_cp,label_nome_h1,label_curso_h1,nome_aluno,turma_aluno,classe_aluno,n_i_turma_aluno,permicao_entrada,image_aluno)





            MDBoxLayout:

                MDCard:
                    id:fundo1
                    orientation:"vertical"
                    md_bg_color:.1,.1,.1,1
                    radius:[0,0,0,0]
                    padding:30
                    MDBoxLayout:
                        orientation:"horizontal"
                        padding:30
                        md_bg_color:app.theme_cls.primary_color
                        radius:[20,20,20,20]
                        MDBoxLayout:
                            Image:
                                id:image_aluno
                                source:"images/henry.jpeg"
                        MDBoxLayout:
                            orientation:"vertical"
                            MDLabel:
                                id:label_nome_h1
                                text:"Henri Canvill"
                                font_size:40
                                font_name:"fonts/static/Montserrat-SemiBold.ttf"
                                pos_hint:{"center_x":0.6,"center_y":1}
                            MDBoxLayout:
                                MDLabel:
                                    id:label_curso_h1
                                    text:"Técnico Informatico"
                                    font_size:20
                                    font_name:"fonts/static/Montserrat-Medium.ttf"
                                    pos_hint:{"center_x":0.8,"center_y":.8}
                                    halign:"center"




                    MDBoxLayout:
                        padding:[120,30,0,0]
                        orientation:"vertical"
                        MDBoxLayout:
                            orientation:"vertical"
                            MDLabel:
                                id:nome_aluno
                                text:"Nome                  Henry Maruvado Canvil"
                                font_size:20
                                font_name:"fonts/static/Montserrat-Medium.ttf"
                                adaptive:True
                                halign:"left"
                            MDLabel:
                                id:turma_aluno
                                text:"Turma                 TI11A"
                                font_size:20
                                font_name:"fonts/static/Montserrat-Medium.ttf"
                                halign:"left"
                            MDLabel:
                                id:classe_aluno
                                text:"Classe                    11ª"
                                font_size:20
                                font_name:"fonts/static/Montserrat-Medium.ttf"
                                halign:"left"
                            MDLabel:
                                id:n_i_turma_aluno
                                text:"Nº                           13"
                                font_size:20
                                font_name:"fonts/static/Montserrat-Medium.ttf"
                                halign:"left"
                            MDLabel:
                                id:permicao_entrada
                                text:"Permição                           Autorizada"
                                font_size:20
                                font_name:"fonts/static/Montserrat-Medium.ttf"
                                halign:"left"






    MDFloatLayout:
        MDIconButton:
            icon:"cog-outline"
            pos_hint:{"center_y":.97,"center_x":.96}
            color:1,1,1,1
            on_release:app.change_screen_right(root.manager,"ConfigDoorMonitoramentScreen")





        MDLabel:
            text:"MAGNA"
            font_name:"fonts/static/Montserrat-Light.ttf"
            font_size:50
            size_hint_y: None
            pos_hint:{"center_x":0.5,"center_y":.95}

            halign:"center"







