<SchoolMonitoramentScreen>
    name:"SchoolMonitoramentScreen"

    MDBoxLayout:
        md_bg_color:.1,.1,.1,1


        orientation: "vertical"

        MDTopAppBar:
            title:"MAGNA"
            elevation:0


        MDBoxLayout:
            orientation:"horizontal"
            md_bg_color:.2,.2,.2,1
            MDFloatLayout:




                MDBoxLayout:
                    orientation:"vertical"
                    md_bg_color:.2,.2,.2,1
                    MDFloatLayout:
                        Image:
                            id: camera_image1
                            source: "images/icon_camera.png"

                            pos_hint:{"center_x":.5,"center_y":.5}














    MDFloatLayout:
        MDIconButton:
            icon:"cog-outline"
            pos_hint:{"center_y":.97,"center_x":.96}
            color:1,1,1,1
            on_release:app.change_screen_right(root.manager,"ConfigMonitoramentScreen")













