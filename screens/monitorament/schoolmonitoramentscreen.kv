<SchoolMonitoramentScreen>
    name:"SchoolMonitoramentScreen"

    MDBoxLayout:
        md_bg_color:.1,.1,.1,1


        orientation: "vertical"

        MDTopAppBar:
            left_action_items: [["arrow-left", lambda x: app.change_screen_left(root.manager,"LoginScreen")]]
            elevation:0


        MDBoxLayout:
            orientation:"horizontal"
            md_bg_color:.2,.2,.2,1
            MDFloatLayout:




                MDBoxLayout:
                    orientation:"vertical"
                    md_bg_color:.2,.2,.2,1
                    MDFloatLayout:
                        Image:
                            id: camera_image1
                            source: "images/icon_camera.png"

                            pos_hint:{"center_x":.5,"center_y":.5}














    MDFloatLayout:
        MDIconButton:
            icon:"cog-outline"
            pos_hint:{"center_y":.97,"center_x":.96}
            color:1,1,1,1
            on_release:app.change_screen_right(root.manager,"ConfigSchoolMonitoramentScreen")



        MDLabel:
            text:"MAGNA"
            font_name:"fonts/static/Montserrat-Light.ttf"
            font_size:50
            size_hint_y: None
            pos_hint:{"center_x":0.5,"center_y":.95}

            halign:"center"

    MDFloatLayout:
        MDIconButton:
            text:"Logout"
            icon:"exit-to-app"
            pos_hint:{"center_y":.97,"center_x":.98}
            color:1,1,1,1
            on_release:
                app.change_screen_right(root.manager,"LoginScreen")
                app.show_snackbar("Logout")










